{
  "manifest_version": 2,
  "name": "VK Charts",
  "description": "Диаграмы VK.",
  "version": "1.0.1",
  "permissions": [
    "tabs",
    "storage",
    "http://*.vk.com/*",
    "http://vk.com/*",
    "https://*.vk.com/*",
    "https://vk.com/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "js/statistics.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://vk.com/*"],
      "js": ["js/libs/Chart.min.js", "js/libs/jquery.min.js", "js/vkinject.js"],
      "css": ["css/vkinject.css"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "38": "images/icons/icon38.png"
    },
    "default_title": "Диаграмы VK"
  }
}
