{
  "manifest_version": 2,
  "name": "VK Charts",
  "description": "Allows to see statistics based on user vk profile.",
  "version": "1.0.3",
  "permissions": [
    "tabs",
    "storage",
    "http://*.vk.com/*",
    "http://vk.com/*",
    "https://*.vk.com/*",
    "https://vk.com/*"
  ],
  "icons": {
    "48": "images/icons/icon48.png",
    "64": "images/icons/icon64.png",
    "256": "images/icons/icon256.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "js/statistics.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://vk.com/*", "*://new.vk.com/*"],
      "js": ["js/libs/Chart.min.js", "js/libs/jquery.min.js", "js/vkinject.js"],
      "css": ["css/vkinject.css"]
    }
  ],
  "browser_action": {
    "default_title": "VK Charts"
  }
}
